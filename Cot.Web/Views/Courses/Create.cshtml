@model CourseCreateModel

@{
    ViewData["Title"] = "Create Course";
}

@section Header {
    <!--Row-->
    <div class="m-0 p-0 g-2 row">
        <!--Col-->
        <div class="gap-2 col-12 d-flex align-content-center">
            <!--Title-->
            <h3 class="m-0 p-0">Create <strong>Course</strong></h3>
            <!--Buttons-->
            <a class="ms-auto btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left-circle"></i>&nbsp;LIST</a>
        </div>
    </div>
}

<!--Form-->
<form method="post">
    <!--Row-->
    <div class="m-0 p-0 pb-2 g-2 row border-bottom">
        <!--Col-->
        <div class="col-12 d-flex flex-row align-content-center">
            <!--Info-->
            <h6 class="m-0 p-0">Please enter the following details.</h6>
        </div>
    </div>
    <!--Row-->
    <div class="m-0 p-0 g-2 row">
        <!--Col-->
        <div class="col-12">
            <!--Id-->
            <div class="form-floating w-100">
                <input class="form-control" id="Id" placeholder="Course UID" value="(auto-generated)" disabled>
                <label for="Id">UID</label>
            </div>
            <span class="text-danger small"></span>
        </div>
        <!--Col-->
        <div class="col-12 col-sm-4">
            <!--Code-->
            <div class="form-floating w-100">
                <input class="form-control" asp-for="Code" placeholder="Course Code">
                <label asp-for="Code"></label>
            </div>
            <span class="text-danger small" asp-validation-for="Code"></span>
        </div>
        <!--Col-->
        <div class="col-12 col-sm-8">
            <!--Title-->
            <div class="form-floating w-100">
                <input class="form-control" asp-for="Title" placeholder="Course Title">
                <label asp-for="Title"></label>
            </div>
            <span class="text-danger small" asp-validation-for="Title"></span>
        </div>
        <!--Col-->
        <div class="col-12 col-sm-6">
            <!--Level-->
            <div class="form-floating w-100">
                <select class="form-select" asp-for="Level" asp-items="Html.GetEnumSelectList<CourseLevel>()"></select>
                <label asp-for="Level"></label>
            </div>
            <span class="text-danger small" asp-validation-for="Level"></span>
        </div>
        <!--Col-->
        <div class="col-12 col-sm-6">
            <!--Type-->
            <div class="form-floating w-100">
                <select class="form-select" asp-for="Type" asp-items="Html.GetEnumSelectList<CourseType>()"></select>
                <label asp-for="Type"></label>
            </div>
            <span class="text-danger small" asp-validation-for="Type"></span>
        </div>
        <!--Col-->
        <div class="col-12">
            <!--Notes-->
            <div class="form-floating w-100">
                <textarea class="form-control" asp-for="Notes" placeholder="Notes..."></textarea>
                <label asp-for="Notes"></label>
            </div>
            <span class="text-danger small" asp-validation-for="Notes"></span>
        </div>
        <!--Col-->
        <div class="col-12">
            <!--Validation-->
            <div class="text-danger small" asp-validation-summary="ModelOnly"></div>
        </div>
        <!--Col-->
        <div class="gap-2 col-12 d-flex">
            <!--Submit-->
            <button class="btn btn-success" type="submit"><i class="bi bi-save"></i>&nbsp;SAVE</button>
            <!--Cancel-->
            <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-x-circle"></i>&nbsp;CANCEL</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
