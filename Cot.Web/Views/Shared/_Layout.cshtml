@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
    var action = ViewContext.RouteData.Values["Action"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - College of Technology</title>

    <!--Stylesheets-->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha256-YvdLHPgkqJ8DVUxjjnGVlMMJtNimJ6dYkowFFvp4kKs=" crossorigin="anonymous"
            asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
            asp-fallback-test-class="sr-only"
            asp-fallback-test-property="position"
            asp-fallback-test-value="absolute"
            asp-suppress-fallback-integrity="true">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" integrity="sha256-rzXMaro05QBd53CZ36ctTBp3FdKN3Ow0P0gDHcjLCLw=" crossorigin="anonymous">
    </environment>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column bg-1 min-vh-100">

    <!--Header-->
    <header class="sticky-top">
        <!--Navigation-->
        <nav class="m-0 p-0 px-2 py-1 d-flex align-items-center justify-content-between bg-10 navbar navbar-expand-sm navbar-dark shadow">
            <!--Brand-->
            <a title="Home" class="m-0 p-0 navbar-brand d-flex justify-content-between align-items-center gap-1" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/cot-logo-white.svg" alt="COT Logo" style="height: 32px; display: block; vertical-align: middle;" />
                <span class="brand-name text-white" style="font: 16px Arial, sans-serif; line-height: 19px; letter-spacing: 1px; display: block; vertical-align: middle; ">COLLEGE OF<br />TECHNOLOGY</span>
            </a>
            <!--Navbar Toggler-->
            <button class="px-3 py-1 navbar-toggler collapsed rounded-pill border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <i class="fs-6 navbar-toggler-icon"></i>
            </button>
            <!--Navbar-->
            <div class="navbar-collapse collapse">
                <ul class="ms-auto navbar-nav">
                    <li class="mt-1 m-sm-0 nav-item">
                        <a title="Home" class="px-3 py-1 nav-link text-light d-flex rounded-pill justify-content-between @(controller == "Home" && action == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index"><span>HOME</span><i class="bi bi-house d-sm-none me-1"></i></a>
                    </li>
                    <li class="mt-1 m-sm-0 nav-item">
                        <a title="Courses" class="px-3 py-1 nav-link text-light d-flex rounded-pill justify-content-between @(controller == "Courses" ? "active" : "")" asp-area="" asp-controller="Courses" asp-action="Index"><span>COURSES</span><i class="bi bi-book d-sm-none me-1"></i></a>
                    </li>
                    <li class="mt-1 m-sm-0 nav-item">
                        <a title="About" class="px-3 py-1 nav-link text-light d-flex rounded-pill justify-content-between @(controller == "Home" && action == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About"><span>ABOUT</span><i class="bi bi-info-circle d-sm-none me-1"></i></a>
                    </li>
                </ul>
            </div>
        </nav>

        <!--Strip-->
        <div class="px-2 d-flex bg-1 small justify-content-between border-bottom">
            <!--Breadcrum-->
            <breadcrumb></breadcrumb>
            <!--Info-->
            <div>
                Retrieved: @DateTime.Now.ToString(StringFormat.DateTime)
            </div>
        </div>

        <!--Alert-->
        @if (ViewData["Alert"] != null)
        {
            Html.Raw(ViewData["Alert"]);
        }
    </header>

    <!--View Header-->
    @RenderSection("Header", required: true)


    <!--Main-->
    <main>
        <div class="p-1 pt-0 pb-2 container shadow">@RenderBody()</div>
    </main>

    <!--Footer-->
    <footer class="py-2 mt-auto bg-11" style="height: auto; box-shadow: rgba(0,0,0, 3) 20px">
        <div class="container-fluid fs-6 fw-light text-muted">
            <div class="row">
                <div class="col d-flex justify-content-between small">
                    <span>&copy; @DateTime.Today.Year - College of Technology</span>
                    <span>Site created by <a title="Contact Developer" class="text-muted" href="mailto:nifraz@live.com">Nifraz Navahz</a></span>
                </div>
            </div>
        </div>
    </footer>

    <!--Scripts-->
    <environment include="Development">
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha256-9SEPo+fwJFpMUet/KACSwO+Z/dKMReF9q4zFhU/fT9M=" crossorigin="anonymous"
                    asp-fallback-src="~/lib/bootstrap/js/bootstrap.bundle.min.js"
                    asp-fallback-test="window.bootstrap"
                    asp-suppress-fallback-integrity="true"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
