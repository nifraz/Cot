@model Course

@{
    ViewData["Title"] = "Delete Course";
}

<!--Title-->
<div class="title text-white">
    <!--Row-->
    <div class="g-2 row">
        <!--Col-->
        <div class="gap-2 col-12 d-flex align-content-center">
            <!--Title-->
            <h4 class="m-0 ms-2 pt-1">Delete <strong>Course</strong></h4>
            <!--Buttons-->
            <div class="ms-auto gap-2 d-flex">
                <!--Manage-->
                <a class="btn btn-primary shadow" asp-action="Manage"><i class="bi bi-list-ul"></i></a>
            </div>
        </div>
    </div>
</div>

<!--Section-->
<div class="section mt-sm-2">
    <!--Section Header-->
    <div class="section-header">
        <!--Row-->
        <div class="g-2 row border-bottom">
            <!--Col-->
            <div class="col-12 d-flex flex-row align-content-center">
                <!--Info-->
                <h6 class="m-0 ms-1">Are you sure you want to delete this Course?</h6>
            </div>
        </div>
    </div>

    <!--Section Body-->
    <div class="section-body bg-light">
        <!--Row-->
        <div class="g-2 row bg-light">
            <div class="col-12">
                @Html.DisplayNameFor(model => model.Title)
            </div>
            <div class="col-12">
                @Html.DisplayFor(model => model.Title)
            </div>

            <form asp-action="Delete">
                <div class="gap-2 col-12 d-flex">
                    <input type="hidden" asp-for="Code" />
                    <!--Submit-->
                    <button class="btn btn-danger shadow" type="submit"><i class="bi bi-trash3"></i>&nbsp;DELETE</button>
                    <!--Cancel-->
                    <a class="btn btn-secondary shadow" asp-action="Details" asp-route-id="@Model.Id"><i class="bi bi-x-circle"></i>&nbsp;CANCEL</a>
                </div>
            </form>
        </div>
    </div>
</div>


