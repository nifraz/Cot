@model CourseEditModel

@{
    ViewData["Title"] = "Edit Course";
}

<!--Title-->
<div class="title text-white shadow-sm">
    <!--Row-->
    <div class="g-2 row">
        <!--Col-->
        <div class="gap-2 col-12 d-flex align-content-center">
            <!--Title-->
            <h4 class="m-0 ms-2 pt-1">Edit <strong>Course</strong></h4>
            <!--Buttons-->
            <div class="ms-auto gap-2 d-flex">
                <!--Manage-->
                <a class="btn btn-outline-light" asp-action="Manage"><i class="bi bi-list-ul"></i></a>
                <!--Create-->
                <a class="btn btn-success" asp-action="Create"><i class="bi bi-plus-circle"></i>&nbsp;NEW</a>
            </div>
        </div>
    </div>
</div>

<!--Section-->
<div class="section my-sm-2 border rounded shadow">
    <!--Form-->
    <form method="post">
        <!--Section Header-->
        <div class="section-header">
            <!--Row-->
            <div class="g-2 row border-bottom">
                <!--Col-->
                <div class="col-12 d-flex align-content-center">
                    <!--Info-->
                    <h6 class="m-0 ms-1">Please enter the following details.</h6>
                </div>
            </div>
        </div>

        <!--Row-->
        <div class="g-2 row">
            <!--Col-->
            <div class="col-12">
                <!--Id-->
                <div class="form-floating w-100">
                    <input class="form-control" asp-for="Id" placeholder="Course UID" readonly>
                    <label asp-for="Id"></label>
                </div>
                <span class="text-danger small" asp-validation-for="Id"></span>
            </div>
            <!--Col-->
            <div class="col-12 col-sm-4">
                <!--Code-->
                <div class="form-floating w-100">
                    <input class="form-control" asp-for="Code" placeholder="Course Code">
                    <label asp-for="Code"></label>
                </div>
                <span class="text-danger small" asp-validation-for="Code"></span>
            </div>
            <!--Col-->
            <div class="col-12 col-sm-8">
                <!--Title-->
                <div class="form-floating w-100">
                    <input class="form-control" asp-for="Title" placeholder="Course Title">
                    <label asp-for="Title"></label>
                </div>
                <span class="text-danger small" asp-validation-for="Title"></span>
            </div>
            <!--Col-->
            <div class="col-12 col-sm-6">
                <!--Level-->
                <div class="form-floating w-100">
                    <select class="form-select" asp-for="Level" asp-items="Html.GetEnumSelectList<CourseLevel>()"></select>
                    <label asp-for="Level"></label>
                </div>
                <span class="text-danger small" asp-validation-for="Level"></span>
            </div>
            <!--Col-->
            <div class="col-12 col-sm-6">
                <!--Type-->
                <div class="form-floating w-100">
                    <select class="form-select" asp-for="Type" asp-items="Html.GetEnumSelectList<CourseType>()"></select>
                    <label asp-for="Type"></label>
                </div>
                <span class="text-danger small" asp-validation-for="Type"></span>
            </div>
            <!--Col-->
            <div class="col-12">
                <!--Notes-->
                <div class="form-floating w-100">
                    <textarea class="form-control" asp-for="Notes" placeholder="Notes..."></textarea>
                    <label asp-for="Notes"></label>
                </div>
                <span class="text-danger small" asp-validation-for="Notes"></span>
            </div>
            <!--Col-->
            <div class="col-12">
                <!--Validation-->
                <div class="text-danger small" asp-validation-summary="ModelOnly"></div>
            </div>
            <!--Col-->
            <div class="gap-2 col-12 d-flex">
                <!--Submit-->
                <button class="btn btn-success" type="submit"><i class="bi bi-save"></i>&nbsp;UPDATE</button>
                <!--Cancel-->
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id"><i class="bi bi-x-circle"></i>&nbsp;CANCEL</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
