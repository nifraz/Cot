@model CourseCreateModel

@{
    ViewData["Title"] = "Create Course";
}

<!--Container-->
<div class="p-1 pt-0 pb-2 container-fluid border-bottom" style="background: url('@Url.Content("~/images/circuit-board.svg")');">
    <!--Row-->
    <div class="m-0 p-0 g-2 row">
        <!--Col-->
        <div class="gap-2 col-12 d-flex align-content-center">
            <!--Title-->
            <h3 class="m-0 p-0">Create <strong>Course</strong></h3>
            <!--Main Buttons-->
            <a class="ms-auto btn btn-secondary" title="Back to List" asp-action="Index"><i class="bi bi-list"></i>&nbsp;LIST</a>
        </div>
    </div>
</div>

<!--Container-->
<div class="p-1 pt-0 pb-2 container shadow">
    <form method="post">
        <div class="m-0 p-0 pb-2 g-2 row border-bottom">
            <!--Col-->
            <div class="col-12 d-flex align-content-center">
                <!--Info-->
                <h6 class="m-0 p-0">Please enter the required details.</h6>
            </div>
        </div>
        <!--Row-->
        <div class="m-0 p-0 g-2 row">
            <!--Col-->
            <div class="col-12 col-sm-4">
                <!--Code-->
                <div class="form-floating w-100">
                    <input class="form-control" asp-for="Code" placeholder="Course Code">
                    <label asp-for="Code"></label>
                </div>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <!--Col-->
            <div class="col-12 col-sm-8">
                <!--Title-->
                <div class="form-floating w-100">
                    <input class="form-control" asp-for="Title" placeholder="Course Title">
                    <label asp-for="Title"></label>
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <!--Col-->
            <div class="col-12 col-sm-6">
                <!--Level-->
                <div class="form-floating w-100">
                    <select class="form-select" asp-for="Level" asp-items="Html.GetEnumSelectList<CourseLevel>()"></select>
                    <label asp-for="Level"></label>
                </div>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <!--Col-->
            <div class="col-12 col-sm-6">
                <!--Type-->
                <div class="form-floating w-100">
                    <select class="form-select" asp-for="Type" asp-items="Html.GetEnumSelectList<CourseType>()"></select>
                    <label asp-for="Type"></label>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <!--Col-->
            <div class="col-12">
                <!--Notes-->
                <div class="form-floating w-100">
                    <textarea class="form-control" asp-for="Notes" placeholder="Notes..."></textarea>
                    <label asp-for="Notes"></label>
                </div>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <!--Col-->
            <div class="col-12">
                <!--Validation-->
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </div>
            <!--Col-->
            <div class="col-12">
                <!--Submit-->
                <button class="btn btn-success" type="submit"><i class="bi bi-save"></i>&nbsp;SAVE</button>
                <!--Submit-->
                <a class="ms-auto btn btn-secondary" title="Cancel" asp-action="Index"><i class="bi bi-x-circle"></i>&nbsp;CANCEL</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
