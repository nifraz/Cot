@{ 
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
    var action = ViewContext.RouteData.Values["Action"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - College of Technology</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-1">

    <!-- Header -->
    <header class="sticky-top shadow-sm">
        <nav class="bg-11 navbar navbar-expand-sm navbar-dark border-bottom py-1">
            <div class="container-fluid">
                <a title="Home" class="navbar-brand p-0 px-1 pe-2 m-0" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/cot-logo-white.svg" alt="COT Logo" style="height: 32px; width: 32px; vertical-align: middle;" />
                    <span class="brand-name text-white" style="font: bold 16px Arial, sans-serif; line-height: 18px; letter-spacing: 1px; display: inline-block; padding-top: 2px; vertical-align: middle; ">COLLEGE OF<br />TECHNOLOGY</span>
                </a>
                <button class="navbar-toggler collapsed bg-9 p-1" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="navbar-toggler-icon"></i>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto mt-1 mt-sm-0">
                        <li class="nav-item">
                            <a title="Home" class="nav-link text-light py-1 px-3 my-1 rounded-pill d-flex justify-content-between @(controller == "Home" && action == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index"><span>HOME</span><i class="bi bi-house d-sm-none me-1"></i></a>
                        </li>
                        <li class="nav-item">
                            <a title="Courses" class="nav-link text-light py-1 px-3 my-1 rounded-pill d-flex justify-content-between @(controller == "Courses" ? "active" : "")" asp-area="" asp-controller="Courses" asp-action="Index"><span>COURSES</span><i class="bi bi-book d-sm-none me-1"></i></a>
                        </li>
                        <li class="nav-item">
                            <a title="Privacy" class="nav-link text-light py-1 px-3 my-1 rounded-pill d-flex justify-content-between @(controller == "Home" && action == "Privacy" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Privacy"><span>PRIVACY</span><i class="bi bi-shield d-sm-none me-1"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <nav class="bg-3 px-3 d-none d-sm-flex small" style="height:20px; --bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Index</li>
            </ol>
        </nav>
    </header>

    <!-- Main -->
    <main class="container-fluid" role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="container-fluid border-top bg-11 fs-6 fw-light text-muted" style="height: auto;">
        <div class="row">
            <div class="col d-flex justify-content-between small">
                <span>&copy; @DateTime.Today.Year - College of Technology</span>
                <span>Site created by <a title="Contact Developer" class="text-muted" href="mailto:nifraz@live.com">Nifraz Navahz</a></span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
